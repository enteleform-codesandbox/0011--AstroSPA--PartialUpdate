---



<html>

	<head>
	</head>

	<body>

		<Sidebar/>

		<main>
			<slot/>
		</main>

		<!--
			[yes] loads page
			[no ] avoids style flash
			[no ] persists `nav`
		-->
		<!--<Spa
			defaultAnimation  = {false}
			scrollIntoView    = {false}
			progressBar       = {false}
		/>-->

		<!--
			[no ] loads page
			[no ] avoids style flash
			[yes] persists `nav`
		-->
		<Spa
			defaultAnimation  = {false }
			scrollIntoView    = {false }
			progressBar       = {false }
			containerSelector = {"main"}
		/>

	</body>
